<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>  
      </div>
    </div>

    <div class="d-inline-flex justify-content-end">      
      <% if (users[id]) { %>
        <p>Logged in as: <%= users[id].email %></p>          
        <form class="form-inline" method="POST" action="/logout">        
          <button type="submit" class="btn btn-secondary">Logout</button>
        </form>    
      <% } else { %>
        <p>Login: </p>
        <form class="form-inline" method="POST" action="/login">
          <label for="email"></label> 
          <input
            id="email"
            name="email"
            type="text"
            placeholder="email@example.com"
            style="width: 200px; margin: 1em"
          />
          <button type="submit" class="btn btn-warning">Login</button>
        </form>      
      <% } %>    
    </div>

  </nav>
</header>